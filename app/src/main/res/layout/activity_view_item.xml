<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Task Name -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/lightbrown"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">


            <!-- Empty layout for aligning widgets to horizontal center -->
            <Space android:id="@+id/center_dummy"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>

            <!-- "I want to" text -->
            <TextView
                android:id="@+id/text_iwantto"
                android:text="I want to..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:textColor="#a7a7a7"
                android:textSize="24sp" />

            <!-- Text of item being viewed -->
            <TextView
                android:id="@+id/text_itemtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:width="275dp"
                android:layout_below="@+id/text_iwantto"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </RelativeLayout>


        <!-- Layout for Deadline parameter-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <TextView
                android:id="@+id/param_deadline_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Deadline"
                android:gravity="left"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/param_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/param_deadline_title"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>


        <!-- Layout for Priority parameter-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/lightbrown"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <TextView
                android:id="@+id/param_priority_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Priority"
                android:gravity="left"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/param_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/param_priority_title"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>


        <!-- Layout for Money Cost parameter-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <TextView
                android:id="@+id/param_moneycost_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Money Cost"
                android:gravity="left"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/param_moneycost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/param_moneycost_title"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>


        <!-- Layout for Time Cost parameter-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/lightbrown"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <TextView
                android:id="@+id/param_timecost_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Time Cost"
                android:gravity="left"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/param_timecost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/param_timecost_title"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>


        <!-- Layout for Travel Distance parameter-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <TextView
                android:id="@+id/param_traveldistance_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Travel Distance"
                android:gravity="left"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:id="@+id/param_traveldistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_below="@+id/param_traveldistance_title"
                android:layout_marginLeft="15dp"/>
        </RelativeLayout>


        <!-- Layout for Buttons -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="edu.hmc.dxie.bucketlist.ViewItemActivity">

            <!-- Complete button -->
            <Button
                android:id="@+id/button_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                android:layout_toLeftOf="@+id/button_edit" />

            <!-- Edit button -->
            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_centerHorizontal="true"/>

            <!-- Delete button -->
            <Button
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_toRightOf="@+id/button_edit" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>